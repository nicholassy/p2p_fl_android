<?xml version="1.0" encoding="utf-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".FederatedLearning.FederatedLearningActivity">

    <TextView
        android:id="@+id/federated_learning_title"
        android:text="Federated Learning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/federated_learning_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Federated Learning in progress,\nplease wait..."
        android:textSize="15sp"
        android:layout_marginTop="50sp"
        android:layout_marginBottom="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/progressBar"
        app:layout_constraintBottom_toTopOf="@id/federated_learning_status"
        app:layout_constraintTop_toBottomOf="@id/federated_learning_title" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintEnd_toStartOf="@id/federated_learning_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/federated_learning_status"
        app:layout_constraintTop_toBottomOf="@id/federated_learning_title" />

    <TextView
        android:id="@+id/federated_learning_status"
        android:text="Learning From: [device name]\nML Objective: [objectives]\nML Model Size: [file size in MB]"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/btConfirmFederatedLearning"
        app:layout_constraintTop_toBottomOf="@+id/federated_learning_text" />

    <Button
        android:id="@+id/btConfirmFederatedLearning"
        android:text="Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/federated_learning_status"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>